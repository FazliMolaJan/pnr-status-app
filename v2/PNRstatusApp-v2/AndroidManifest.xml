<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionName="@string/versionName" package="com.ae.apps.pnrstatus" android:versionCode="150">
    <application android:icon="@drawable/icon"
    	android:label="@string/app_name"
		android:theme="@android:style/Theme.Black.NoTitleBar" android:description="@string/app_desc">
        
        <activity android:launchMode="singleTop"
				android:label="@string/app_name" android:name="com.ae.apps.pnrstatus.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    	<activity android:name="com.ae.apps.pnrstatus.AboutActivity"></activity>
    	<activity android:name="com.ae.apps.pnrstatus.TicketInfoActivity"></activity>
	</application>
    
    <uses-sdk android:minSdkVersion="8" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest> 